@using CollectionsApp.Models
@model IEnumerable<Item>

@{
    ViewData["Title"] = "Search";
}

<h2>Search Results</h2>

@if (Model == null || !Model.Any())
{
    <p>No results found.</p>
}
else
{
    @foreach (var item in Model)
    {
        
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header" style="background-color:#cbf078">

                    <a asp-controller="Item" asp-action="ItemPage" asp-route-id="@item.Id" style="color:white">@item.Name</a>
                </div>
                <div class="card-body">
                   
                    <p class="card-text">
                        Collection: <a asp-controller="Item" asp-action="Index" asp-route-id="@item.collection.Id">@item.collection.Name</a><br />
                        Author: <a asp-controller="Home" asp-action="Profile" asp-route-id="@item.collection.AppUserId">@item.collection.appUser.UserName</a><br />
                    </p>
                </div>
            </div>
        </div>
    }
    
}