@using CollectionsApp.ViewModels;
@model LoginVM

@{
    ViewData["Title"] = "Log in";
}

<h1 style="color:#132743">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2 style="color:#132743">Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Username" class="form-label">Username</label>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-softblue" style="padding: 10px 30px; font-size: 24px; height: 50px; text-align: center;">Log In</button>

               
                
            </form>
        </section>
    </div>
   
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 
