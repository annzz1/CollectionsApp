@model Item


@{
    ViewData["Title"] = "Edit";
   
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group description">

                    <label asp-for="Tags" class="control-label">Description</label>
                    <textarea asp-for="Tags" class="form-control description"></textarea>
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>


                <button id="newItemSubmit" type="submit" class="btn btn-primary">Save Changes</button>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Items</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
